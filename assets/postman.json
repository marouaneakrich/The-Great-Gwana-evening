    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"your_password\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "description": "Admin authentication endpoint"
      },
      "response": [
        {
          "name": "Success",
          "status": "OK",
          "code": 200,
          "body": "{\n  \"message\": \"Login successful\",\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\"\n}"
        },
        {
          "name": "Unauthorized",
          "status": "Unauthorized",
          "code": 401,
          "body": "{\"error\":\"Invalid credentials\"}"
        }
      ]
    },
    {
      "name": "Create Artist (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}",
            "description": "JWT token from /api/auth/login"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Artist\",\n  \"bio\": \"Artist biography...\",\n  \"photo_url\": \"https://example.com/photo.jpg\",\n  \"performance_time\": \"2024-12-20T21:00:00\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/artists",
          "host": ["{{baseUrl}}"],
          "path": ["api", "artists"]
        },
        "description": "Create new artist (requires admin token)"
      },
      "response": [
        {
          "name": "Created",
          "status": "Created",
          "code": 201,
          "body": "{\n  \"id\": 5,\n  \"name\": \"New Artist\",\n  \"bio\": \"Artist biography...\",\n  \"photo_url\": \"https://example.com/photo.jpg\",\n  \"performance_time\": \"2024-12-20T21:00:00.000Z\",\n  \"updated_at\": \"2024-01-15T19:00:00.000Z\",\n  \"created_at\": \"2024-01-15T19:00:00.000Z\"\n}"
        }
      ]
    },
