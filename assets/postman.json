    {
      "name": "Create Booking",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"full_name\": \"John Doe\",\n  \"phone\": \"+212600000000\",\n  \"ticket_count\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/bookings",
          "host": ["{{baseUrl}}"],
          "path": ["api", "bookings"]
        },
        "description": "Create a new ticket booking. Auto-generates confirmation_code."
      },
      "response": [
        {
          "name": "Created",
          "status": "Created",
          "code": 201,
          "body": "{\n  \"message\": \"Booking created successfully\",\n  \"booking\": {\n    \"id\": 1,\n    \"email\": \"user@example.com\",\n    \"full_name\": \"John Doe\",\n    \"phone\": \"+212600000000\",\n    \"ticket_count\": 2,\n    \"confirmation_code\": \"GNW-A7K2P\",\n    \"created_at\": \"2024-01-15T18:30:00.000Z\",\n    \"updated_at\": \"2024-01-15T18:30:00.000Z\"\n  }\n}"
        },
